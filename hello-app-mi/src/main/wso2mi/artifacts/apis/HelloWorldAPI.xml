<api xmlns="http://ws.apache.org/ns/synapse" name="HelloWorldAPI" context="/hello">
    <resource methods="GET" uri-template="/world">
        <inSequence>
            <payloadFactory media-type="json">
                <format>
                    {"message": "Hello World!"}
                </format>
            </payloadFactory>
            <respond/>
        </inSequence>
        <faultSequence>
            <log category="ERROR">
                <message>Error occurred: ${props.synapse.ERROR_MESSAGE}</message>
            </log>
            <drop/>
        </faultSequence>
    </resource>
</api>
